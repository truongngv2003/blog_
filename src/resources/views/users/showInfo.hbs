<div class="container mt-4 mb-5 border rounded" style="background-color: white; min-height: 800px;">
    <div class="text-center mt-4 mb-5">
        <h2>THÔNG TIN NGƯỜI DÙNG</h2>
        <hr class="mt-1" style="border-top: 2px solid rgba(0, 0, 0, .1); width: 30%;">
    </div>

    <div class="mt-4 clearfix" style="width: 100%;">

        {{!-- group menu --}}
        <div class=" float-left mb-4" style="width: 18%;">
            <ul class="list-group">
                <li class="list-group-item active">
                    <a href="#" style="color: white; text-decoration: none;">Thông tin tổng quan</a>
                </li>
                <li class="list-group-item">
                    <a href="/users/{{user._id}}/posts" style="color: #212529; text-decoration: none;">Thông tin bài đăng</a>
                </li>
                <li class="list-group-item">
                    <a href="/users/{{user._id}}/create" style="color: #212529; text-decoration: none;">Tạo bài đăng mới</a>
                </li>
            </ul>
        </div>

        <div class="border rounded float-right mb-4" style="width: 80%;">
            <div class="container m-2">

                <div class="mt-3 clearfix">
                    <div class="float-left mr-2">
                        <img src="{{user.avatar}}" alt="" class="rounded-circle" style="width: 45px; height: 45px;">
                    </div>
                    <div class="float-left text-top">
                        <strong>{{user.name}}</strong>
                        <p>Email</p>
                    </div>
                </div>

                <div class="mb-3">
                    <b>Tham gia từ: </b><span>{{formatDateTime user.createdAt}}</span>
                </div>

                <div>
                    <b>Tổng bài đăng: </b> <span>{{user.totalPost}}</span><br>
                    <b style="color: rgb(9, 207, 9);">Bài đăng đã duyệt: </b> <span>{{user.approvedPost}}</span><br>
                    <b style="color: rgb(201, 201, 8);">Bài đăng chờ duyệt: </b> <span>{{user.pendingPost}}</span><br>
                    <b style="color: rgb(183, 12, 12);">Bài đăng bị từ chối: </b> <span>{{user.rejectedPost}}</span><br>
                </div>

                <div class="text-center mt-5 mb-3">
                    <button type="button" class="btn btn-success">
                        <a href="/users/{{user._id}}/posts/create" style="color: white; text-decoration: none;">Tạo bài đăng mới</a>
                    </button>
                </div>
            </div>
        </div>

    </div>
</div>