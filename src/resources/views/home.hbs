<script>
    function setValueAndSubmit(value) {
        document.getElementById("sortValue").value = value;
        const searchInput = document.querySelector('input[name="q"]');
        if (searchInput) {
            document.getElementById("searchValue").value = searchInput.value;
        }
        document.forms['sort'].submit();
    }
</script>

